<body>
  <h1>Interaktywna Tablica z Lajkami</h1>
  <div class="board">
    <!-- Miejsce na posty -->
    <div id="posts"></div>

    <!-- Formularz dodawania nowego posta -->
    <div class="new-post">
      <input type="text" id="postContent" placeholder="Napisz co≈õ...">
      <button onclick="addPost()">Dodaj</button>
    </div>
  </div>

  <script>
    // Funkcja dodajƒÖca post do tablicy
    function addPost() {
      const postContent = document.getElementById('postContent').value;
      const postsContainer = document.getElementById('posts');

      if (postContent.trim() === "") {
        alert("Tre≈õƒá posta nie mo≈ºe byƒá pusta!");
        return;
      }

      // Tworzenie nowego elementu HTML dla posta
      const postElement = document.createElement('div');
      postElement.className = 'post';
      postElement.innerHTML = `
        <p>${postContent}</p>
        <div class="actions">
          <button class="reaction-btn" onclick="handleLike(this)">
            üëç <span class="reaction-count">0</span>
          </button>
          <button class="reaction-btn" onclick="handleReaction(this)">
            ‚ù§Ô∏è <span class="reaction-count">0</span>
          </button>
        </div>
      `;

      // Dodanie posta do tablicy
      postsContainer.appendChild(postElement);

      // Wyczy≈õƒá pole tekstowe
      document.getElementById('postContent').value = "";
    }

    // Funkcja obs≈ÇugujƒÖca lajki
    function handleLike(button) {
      const countSpan = button.querySelector('.reaction-count');
      let currentCount = parseInt(countSpan.textContent);
      currentCount++; // Zwiƒôkszenie liczby lajk√≥w
      countSpan.textContent = currentCount;
    }

    // Funkcja obs≈ÇugujƒÖca reakcje (np. serce)
    function handleReaction(button) {
      const countSpan = button.querySelector('.reaction-count');
      let currentCount = parseInt(countSpan.textContent);
      currentCount++; // Zwiƒôkszenie liczby reakcji
      countSpan.textContent = currentCount;
    }
  </script>
