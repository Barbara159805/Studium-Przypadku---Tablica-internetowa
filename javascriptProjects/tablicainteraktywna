  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f4f4f4;
    }
    h1 {
      text-align: center;
    }
    .board {
      width: 100%;
      max-width: 600px;
      margin: 20px auto;
      border: 1px solid #ddd;
      border-radius: 10px;
      background: #fff;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .post {
      margin: 10px 0;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background: #fafafa;
    }
    .post:hover {
      background: #f0f8ff;
    }
    .post p {
      margin: 0;
    }
    .new-post {
      display: flex;
      margin-top: 20px;
    }
    .new-post input {
      flex: 1;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ddd;
